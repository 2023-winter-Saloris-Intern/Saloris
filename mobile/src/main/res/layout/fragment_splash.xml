<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashFragment">

    <ImageView
        android:id="@+id/intro_donoff_logo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_sample1"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/intro_donoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pyeongchangpeace_light"
        android:text="DONOFF"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/intro_donoff_logo"
        app:layout_constraintStart_toStartOf="@+id/intro_donoff_logo"
        app:layout_constraintTop_toBottomOf="@+id/intro_donoff_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pyeongchangpeace_light"
        android:text="Don\'t Nod Off"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/intro_donoff"
        app:layout_constraintStart_toStartOf="@+id/intro_donoff"
        app:layout_constraintTop_toBottomOf="@+id/intro_donoff" />
</androidx.constraintlayout.widget.ConstraintLayout>